{
  "name": "order-service",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run dist/migrate.js && bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "build": "bun run build:app && bun run build:migrate",
    "build:app": "bun build src/index.ts --outdir ./dist --target bun --minify",
    "build:migrate": "bun build drizzle/migrate.ts --outdir ./dist --target bun --minify",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:drop": "drizzle-kit drop",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@fvoid/shared-lib": "^1.0.33",
    "@socket.io/redis-adapter": "^8.3.0",
    "amqplib": "^0.10.8",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "redis": "^5.8.0",
    "socket.io": "4.8.1",
    "zod": "^4.0.5"
  }
}
